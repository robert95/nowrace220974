{% extends(":default:inside_index.html.twig") %}
{% set pageName = "Zakonczone zawody" %}
{% block contestClassMenu %}active{% endblock %}
{% block endedContestsClassMenu %}active{% endblock %}
{% block main %}
    {{ parent() }}
    <div class="row company-contests-page">
        {% if contests | length > 0 %}
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            Zakończone zawody
                        </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Organizator</th>
                                <th>Nazwa</th>
                                <th>Adres</th>
                                <th>Rozpoczęcie</th>
                                <th>Zakończenie</th>
                                <th>Wyścigi</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Organizator</th>
                                <th>Nazwa</th>
                                <th>Adres</th>
                                <th>Rozpoczęcie</th>
                                <th>Zakończenie</th>
                                <th>Wyścigi</th>
                            </tr>
                            </tfoot>
                            <tbody>
                            {% for contest in contests %}
                                <tr class='clickable-row' data-href='{{ path('contest_show', {'id': contest.id} ) }}'>
                                    <td>{{ contest.company.name }}</td>
                                    <td>{{ contest.name }}</td>
                                    <td>{{ contest.adress }}</td>
                                    <td>{{ contest.startTime | date("d/m/Y H:i") }}</td>
                                    <td>{{ contest.endTime | date("d/m/Y H:i") }}</td>
                                    <td>{{ contest.races | length }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        {% else %}
            <div class="col-xs-12">
                <div class="nr-empty-block">
                    <h4>Aktualnie nie ma zakończonych zawodów:(</h4>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block scripts %}
    <script>
        $(document).ready(function() {
            $('#example').DataTable( {
                "language": {
                    "url": "/template/plugins/datatables/Polish.json"
                }
            } );
            $(".clickable-row").click(function() {
                window.location = $(this).data("href");
            });
        } );
    </script>
{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/template/plugins/datatables/dataTables.bootstrap.css">
{% endblock %}