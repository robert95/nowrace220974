{% extends 'base.html.twig' %}

{% block body %}
    <h1>Runner</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ runner.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ runner.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ runner.surname }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{% if runner.gender %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{% if runner.birthDate %}{{ runner.birthDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Club</th>
                <td>{{ runner.club }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ runner.nationality }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ runner.phone }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('runner_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('runner_edit', { 'id': runner.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
