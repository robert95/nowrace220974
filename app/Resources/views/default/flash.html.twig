{% for flashMessage in app.flashes('error') %}
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="{{ 'Zamknij' | trans }}">
            <span aria-hidden="true">×</span>
        </button>
        <div class="flash-icon"><i class="fa fa-stop-circle" aria-hidden="true"></i></div>
        <span><strong>Błąd - </strong>{{ flashMessage|raw }}</span>
    </div>
{% endfor %}
